# Funcion 1
def suma(a, b):
    return a + b


# Función 2
def resta(a, b):
    if a > b:
        c = a - b
    else:
        c = b - a
    return c


# Función 3
def producto(a, b):
    return a * b


# función 4
def maximo(a, b):
    if a > b:
        numero = a
    if b > a:
        numero = b
    else:
        print("Los numeros son iguales")

    return numero


# Funcion 5
def minimo(a, b):
    if a < b:
        numero = a
    if b < a:
        numero = b
    else:
        print("Los numeros son iguales")

    return numero


# funcion 6
def max_de_tres(a, b, c):
    if a >= b and a >= c:
        num = a
    elif b >= a and b >= c:
        num = b
    elif c >= a and c >= b:
        num = c
    else:
        print("Los números son iguales")
    return num

# Funcion 7

def vocal(caracter):
    if caracter == "a" or caracter == "e" or caracter == "i" or caracter == "o" or caracter == "u":
        res = "True"
    elif caracter == "A" or caracter == "E" or caracter == "I" or caracter == "O" or caracter == "U":
        res = "True"
    else:
        res = "False"
    return res

# Funcion 8

def inversa(cadena):
    return cadena[::-1]

# funcion 9

def es_palindromo(cadena):
    cadena_inv = cadena[::-1]

    if cadena == cadena_inv:
        resul = "True"
    else:
        resul = "False"

    return resul

# Funcion 10

def longitud (cadena):
    for letra in cadena:
        letra += 1
    return letra

# funcion 12

def generar_n_caracteres(numero, caracter ):
    print(f"Te vamos a mostrar '{caracter}' {numero} veces")
    for i in range(numero):
        print(caracter, end="")


