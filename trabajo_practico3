# Funcion 1
def suma(a, b):
    return a + b


# Función 2
def resta(a, b):
    if a > b:
        c = a - b
    else:
        c = b - a
    return c


# Función 3
def producto(a, b):
    return a * b


# función 4
def maximo(a, b):
    if a > b:
        numero = a
    if b > a:
        numero = b
    else:
        print("Los numeros son iguales")

    return numero


# Funcion 5
def minimo(a, b):
    if a < b:
        numero = a
    if b < a:
        numero = b
    else:
        print("Los numeros son iguales")

    return numero


# funcion 6
def max_de_tres(a, b, c):
    if a >= b and a >= c:
        num = a
    elif b >= a and b >= c:
        num = b
    elif c >= a and c >= b:
        num = c
    else:
        print("Los números son iguales")
    return num

# Funcion 7

def vocal(caracter):
    if caracter == "a" or caracter == "e" or caracter == "i" or caracter == "o" or caracter == "u":
        print("True")
    elif caracter == "A" or caracter == "E" or caracter == "I" or caracter == "O" or caracter == "U":
        print("True")
    else:
        print("False")


